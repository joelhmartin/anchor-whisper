{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Anchor Whisper",
  "version": "0.1.3",
  "identifier": "com.anchor.whisper",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Anchor Whisper",
        "label": "main",
        "width": 500,
        "height": 600,
        "resizable": true,
        "center": true
      },
      {
        "title": "",
        "label": "overlay",
        "url": "overlay.html",
        "width": 100,
        "height": 120,
        "resizable": false,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "focus": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": null,
      "infoPlist": "Info.plist"
    },
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/joelhmartin/anchor-whisper/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDhBQkMxOENEQzc4RUMwNTUKUldSVndJN0h6Umk4aWxjRmlab3BGcUI5Z3BwcDhUM055ZFh6ZmVaelhSTnAzMWZlbEQrQnowSzcK"
    }
  }
}
